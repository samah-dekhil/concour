{% extends 'layout_admin.html.twig' %}

{% block main %}


    
    <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Liste des grades <a href="{{ path('grade_new',{tokenConcours:concours.token}) }}" class="btn btn-primary me-5" style="float:right"><i class="me-2 mdi mdi-plus-circle"></i>Ajouter grade</a></h5>
                 
                  <div class="table-responsive col-md-12">
                    <table
                      id="zero_config"
                      class="table table-striped table-bordered"
                    >
                      <thead>
                        <tr>
                          <th>Libellé</th>
                          <th>Nombre de postes</th>
                     
                          <th>Date création</th>
                          <th>Date modification</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      
                      {% for grade in list %}
                        <tr>
                          <td class="field-rtl">  {{grade.libelle}}</td>
                          <td>  {{grade.nbrePostes}}</td>
                          <td>{{grade.dateCreation|date("m/d/Y")}}</td>
                          <td>{{grade.dateModification|date("m/d/Y H/i:s")}}</td>
                         <td><a href="{{path('grade_show',{tokenConcours:concours.token,token:grade.token})}}"><i class="fas fa-eye-dropper" aria-hidden="true"></i>edit<a></td>
                        </tr>
                      {% endfor %}
                       
                         
                     
                       
                      </tbody>
                   
                    </table>
                  </div>
                </div>
              </div>
{% endblock %}

