{% extends 'layout_admin.html.twig' %}
{% block main %}
  <div class="card-body">
    <h4 class="card-title">Ajouter une phase</h4>
  </div>
  {{ form_start(form) }}
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="form-group row col-md-9">
          {{ form_label(form.libelle) }}
          <div class="input-group">{{ form_widget(form.libelle) }}</div>
        </div>
        <div class="form-group row col-md-9">
          {{ form_label(form.dateDebut) }}
          <div class="input-group">{{ form_widget(form.dateDebut) }}</div>
        </div>
        <div class="form-group row col-md-9">
          {{ form_label(form.dateFin) }}
          <div class="input-group">{{ form_widget(form.dateFin) }}</div>
        </div>
      
      
        <div class="form-group row col-md-9">
        {{ form_label(form.grades) }}
        <div class="input-group">{{ form_widget(form.grades) }}</div>
    </div>
        <div class="form-group row">
          <div class="form-check mr-sm-2">
              {{ form_label(form.isEnabled) }}
              {{ form_widget(form.isEnabled, {'attr': {'class': 'form-check-input'}}) }}
          </div>
          <div class="fv-plugins-message-container invalid-feedback">{{ form_errors(form.isEnabled) }}</div>
        </div>
      </div>

      <div class="card-body d-flex justify-content-end">
        <!-- begin::Button -->
        <a href="{{ path('phase_index',{tokenConcours:concours.token}) }}" class="btn btn-light me-5">Retour à la liste</a>
        <!-- end::Button -->
        <!-- begin::Button -->
        <button type="submit" class="btn btn-primary"><span class="indicator-label">Créer</span></button>
        <!-- end::Button -->
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}

